<Window x:Class="FreewriteWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Freewrite" 
        Height="600" 
        Width="1100"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    
    <Border Background="{DynamicResource WindowBackground}" 
            BorderThickness="1" 
            BorderBrush="#20000000"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="68"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Grid.ColumnSpan="2" 
                    Background="Transparent" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Freewrite" 
                               FontSize="12" 
                               Foreground="{DynamicResource TextColor}"
                               VerticalAlignment="Center" 
                               Margin="12,0,0,0"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center">
                        <Button Content="â”€" 
                                Click="MinimizeButton_Click" 
                                Style="{StaticResource ModernButton}"
                                Width="46" Height="32" 
                                FontSize="16"/>
                        <Button Content="â–¡" 
                                Click="MaximizeButton_Click" 
                                Style="{StaticResource ModernButton}"
                                Width="46" Height="32" 
                                FontSize="14"/>
                        <Button Content="âœ•" 
                                Click="CloseButton_Click" 
                                Style="{StaticResource ModernButton}"
                                Width="46" Height="32" 
                                FontSize="16"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Text Editor -->
            <ScrollViewer Grid.Row="1" Grid.Column="0" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="0,20,0,0">
                <Grid MaxWidth="650" HorizontalAlignment="Center">
                    <TextBox x:Name="MainTextBox"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="{DynamicResource TextColor}"
                             FontSize="{Binding CurrentFontSize}"
                             FontFamily="{Binding CurrentFontFamily}"
                             Padding="20"
                             VerticalAlignment="Top"
                             TextChanged="MainTextBox_TextChanged"
                             GotFocus="MainTextBox_GotFocus"/>
                    
                    <TextBlock x:Name="PlaceholderText"
                               Text="Begin writing"
                               FontSize="{Binding CurrentFontSize}"
                               FontFamily="{Binding CurrentFontFamily}"
                               Foreground="{DynamicResource PlaceholderColor}"
                               Padding="25,20"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>
            </ScrollViewer>

            <!-- Sidebar -->
            <Border Grid.Row="1" Grid.Column="1" 
                    x:Name="Sidebar"
                    Width="250" 
                    Background="{DynamicResource SidebarBackground}"
                    BorderBrush="#20000000"
                    BorderThickness="1,0,0,0"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="History" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextColor}"
                               Margin="16,16,16,8"/>
                    
                    <ListBox x:Name="EntriesListBox"
                             Grid.Row="1"
                             Background="Transparent"
                             BorderThickness="0"
                             SelectionChanged="EntriesListBox_SelectionChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8,4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Date}" 
                                               FontSize="12" 
                                               Foreground="{DynamicResource GrayText}"/>
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding PreviewText}" 
                                               FontSize="13"
                                               Foreground="{DynamicResource TextColor}"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="200"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Bottom Navigation -->
            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                    Background="{DynamicResource WindowBackground}"
                    BorderBrush="#20000000"
                    BorderThickness="0,1,0,0">
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center">
                        <Button x:Name="FontSizeButton" 
                                Content="18px" 
                                Click="FontSizeButton_Click"
                                Style="{StaticResource ModernButton}"/>
                        <TextBlock Text="â€¢" 
                                   Foreground="{StaticResource GrayText}" 
                                   Margin="8,0" 
                                   VerticalAlignment="Center"/>
                        <Button Content="Segoe UI" 
                                Click="SegoeFontButton_Click"
                                Style="{StaticResource ModernButton}"/>
                        <TextBlock Text="â€¢" 
                                   Foreground="{StaticResource GrayText}" 
                                   Margin="8,0" 
                                   VerticalAlignment="Center"/>
                        <Button Content="Arial" 
                                Click="ArialFontButton_Click"
                                Style="{StaticResource ModernButton}"/>
                        <TextBlock Text="â€¢" 
                                   Foreground="{StaticResource GrayText}" 
                                   Margin="8,0" 
                                   VerticalAlignment="Center"/>
                        <Button Content="Consolas" 
                                Click="ConsolasFontButton_Click"
                                Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center">
                        <Button x:Name="TimerButton" 
                                Content="15:00" 
                                Click="TimerButton_Click"
                                Style="{StaticResource ModernButton}"/>
                        <TextBlock Text="â€¢" 
                                   Foreground="{StaticResource GrayText}" 
                                   Margin="8,0" 
                                   VerticalAlignment="Center"/>
                        <Button Content="â˜°" 
                                Click="HistoryButton_Click"
                                Style="{StaticResource ModernButton}"
                                FontSize="16"/>
                        <TextBlock Text="â€¢" 
                                   Foreground="{StaticResource GrayText}" 
                                   Margin="8,0" 
                                   VerticalAlignment="Center"/>
                        <Button Content="ðŸŒ™" 
                                Click="ThemeButton_Click"
                                Style="{StaticResource ModernButton}"
                                FontSize="16"/>
                        <TextBlock Text="â€¢" 
                                   Foreground="{StaticResource GrayText}" 
                                   Margin="8,0" 
                                   VerticalAlignment="Center"/>
                        <Button Content="+" 
                                Click="NewEntryButton_Click"
                                Style="{StaticResource ModernButton}"
                                FontSize="18"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>